<body>

<!-- navbar -->
<%- include('../includes/navbar.ejs') %>
<main class="m-5">
    <form action="/admin/editProduct" method="POST">
        <div class="form-group m-4">

            <input type="hidden" name="id" value="<%= product._id %>">
            <label for="product-name" class="mt-3 mb-2">Product name</label>
            <input type="text" class="form-control" name="product-name" id="product-name" value="<%= product.name %>">

            <label for="product-price" class="mt-3 mb-2">Price</label>
            <input type="number" class="form-control" name="product-price" id="product-price" step="0.01"
                   value="<%= product.price %>">

            <label for="product-imageURL" class="mt-3 mb-2">imageURL</label>
            <input type="text" class="form-control" name="product-imageURL" id="product-imageURL"
                   value="<%= product.imageURL %>">

            <label for="product-description" class="mt-3 mb-2">Description</label>
            <textarea type="text" class="form-control" name="product-description" id="product-description"
                      rows="5"><%= product.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary m-4">Submit</button>
    </form>
</main>

<%- include('../includes/end.ejs') %>